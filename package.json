{
  "name": "devboard",
  "displayName": "DevBoard",
  "description": "A developer-focused VS Code extension that brings together tasks, notes, and a TODO code tree all in one clean workspace panel",
  "version": "0.0.1",
  "publisher": "Khalid Elshafie",
  "engines": {
    "vscode": "^1.107.0",
    "node": ">=20",
    "npm": ">=10"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devboard.todo.refresh",
        "title": "Refresh Todos",
        "category": "devBoard",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devBoard",
          "title": "Dev Board",
          "icon": "media/devboard.svg"
        }
      ]
    },
    "views": {
      "devBoard": [
        {
          "id": "todoView",
          "name": "Todo"
        },
        {
          "id": "notesView",
          "name": "Notes"
        },
        {
          "id": "tasksView",
          "name": "Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devboard.todo.refresh",
          "when": "view == todoView",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run lint",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abolkog/devboard.git",
    "license": "MIT"
  }
}
