{
  "name": "devboard",
  "displayName": "DevBoard",
  "description": "A developer-focused VS Code extension that brings together tasks, notes, and a TODO code tree all in one clean workspace panel",
  "version": "1.0.2",
  "publisher": "abolkog",
  "engines": {
    "vscode": "^1.107.0",
    "node": ">=20",
    "npm": ">=10"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devboard.todo.refresh",
        "title": "Refresh Todos",
        "category": "devBoard",
        "icon": "$(refresh)"
      },
      {
        "command": "devboard.notes.refresh",
        "title": "Refresh Notes",
        "category": "devBoard",
        "icon": "$(refresh)"
      },
      {
        "command": "devboard.notes.add",
        "title": "New Note",
        "category": "devBoard",
        "icon": "$(plus)"
      },
      {
        "command": "devboard.notes.delete",
        "title": "Delete Note",
        "category": "devBoard",
        "icon": "$(trash)"
      },
      {
        "command": "devboard.tasks.refresh",
        "title": "Refresh Tasks",
        "category": "devBoard",
        "icon": "$(refresh)"
      },
      {
        "command": "devboard.tasks.add",
        "title": "New Task",
        "category": "devBoard",
        "icon": "$(plus)"
      },
      {
        "command": "devboard.tasks.delete",
        "title": "Delete Task",
        "category": "devBoard",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devBoard",
          "title": "Dev Board",
          "icon": "media/devboard.svg"
        }
      ]
    },
    "views": {
      "devBoard": [
        {
          "id": "todoView",
          "name": "Todo"
        },
        {
          "id": "notesView",
          "name": "Notes"
        },
        {
          "id": "tasksView",
          "name": "Tasks"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devboard.todo.refresh",
          "when": "view == todoView",
          "group": "navigation@1"
        },
        {
          "command": "devboard.notes.refresh",
          "when": "view == notesView",
          "group": "navigation@1"
        },
        {
          "command": "devboard.notes.add",
          "when": "view == notesView",
          "group": "navigation@1"
        },
        {
          "command": "devboard.tasks.refresh",
          "when": "view == tasksView",
          "group": "navigation@1"
        },
        {
          "command": "devboard.tasks.add",
          "when": "view == tasksView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "devboard.notes.delete",
          "when": "view == notesView && viewItem == devboard.note",
          "group": "inline"
        },
        {
          "command": "devboard.tasks.add",
          "when": "view == tasksView && viewItem == devboard.task",
          "group": "inline"
        },
        {
          "command": "devboard.tasks.delete",
          "when": "view == tasksView && viewItem == devboard.task",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run lint",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abolkog/devboard.git",
    "license": "MIT"
  },
  "keywords": [
    "vscode",
    "extension",
    "productivity",
    "tasks",
    "notes",
    "todo",
    "fixme",
    "code-navigation"
  ]
}
